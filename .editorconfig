; https://editorconfig.org/

root = true

# Tab indentation
[*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[{*.yml,*.yaml}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{json}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off
eclint_indent_style = unset
